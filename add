#!/bin/sh
#
# tool to automate the adding of a new repository

repo="$1"
[ "$repo" = "" ] && printf "::  Repo location: " && read -r repo

git clone --bare "$repo" || exit 1

owner="$(whoami)"
url="$(hostname)"
desc=""

# get owner
printf "::  Owner [$owner] : "
read -r $REPLY
[ "$REPLY" = "" ] || owner=$REPLY

# get url
printf "::  URL [$url] : "
read -r $REPLY
[ "$REPLY" = "" ] || url=$REPLY

# get description
printf "::  Description : "
read -r $REPLY
[ "$REPLY" = "" ] || desc=$REPLY

echo $owner
echo $url
echo $desc
